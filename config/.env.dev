# BarqHWMuSig Development Environment Configuration

# Bitcoin Network
# Options: mainnet, testnet, regtest
BITCOIN_NETWORK=regtest

# Bitcoin Core RPC (for regtest mode)
# These settings are optional as python-bitcoinlib will read from ~/.bitcoin/bitcoin.conf
# Only set these if you want to override the default settings
# BITCOIN_CORE_RPC_URL=http://127.0.0.1:18443
 BITCOIN_CORE_RPC_USER=nauman
 BITCOIN_CORE_RPC_PASSWORD=supersecurepassword

# API Endpoints (for mainnet/testnet)
BITCOIN_API_URL=https://blockstream.info/testnet/api/

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/barqhwmusig.log
LOG_CONSOLE=true

# Security
# WARNING: Only use this for testing!
HARDCODED_KEY_ENABLED=true
HARDCODED_KEY_PATH=config/test_key.pem

# Hardware Devices
YUBIKEY_ENABLED=true
LEDGER_ENABLED=true

# Transaction Settings
DEFAULT_FEE_RATE=5
MAX_FEE_RATE=100
MIN_FEE_RATE=1 
# BarqHWMuSig Environment Configuration

# Bitcoin Network Configuration
# Options: mainnet, testnet, regtest
BITCOIN_NETWORK=testnet

# Bitcoin Core RPC (for regtest mode)
# These settings are optional as python-bitcoinlib will read from ~/.bitcoin/bitcoin.conf
# Only set these if you want to override the default settings
# BITCOIN_CORE_RPC_URL=http://127.0.0.1:18443
# BITCOIN_CORE_RPC_USER=username
# BITCOIN_CORE_RPC_PASSWORD=password

# API Endpoints (for mainnet/testnet)
BITCOIN_API_URL=https://blockstream.info/testnet/api
BITCOIN_API_KEY=

# Wallet Configuration
WALLET_DIR=wallets

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/barqhwmusig.log
LOG_CONSOLE=true

# Security Configuration
HARDCODED_KEY_ENABLED=false

# Hardware Devices
YUBIKEY_ENABLED=true
LEDGER_ENABLED=true

# Transaction Configuration
DEFAULT_FEE_RATE=10
MAX_FEE_RATE=100
MIN_FEE_RATE=1 